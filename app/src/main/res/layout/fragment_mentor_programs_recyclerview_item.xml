<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Dropdowns / Dropdown User -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dropdowns_d"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:layout_marginTop="10dp"
        android:background="@drawable/group_50"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            app:cardCornerRadius="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/mentor_program_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/program_profile_picture" />
        </androidx.cardview.widget.CardView>

        <!-- Peculiar C. Umeh -->
        <TextView
            android:id="@+id/gads_progra"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/mukta"
            android:gravity="top"
            android:text="@string/gads_progra"
            android:textAppearance="@style/peculiar_c_"
            android:textColor="@color/mms_black_2"
            android:textFontWeight="700"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Group 579 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_579"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:background="#00000000"
            app:layout_constraintEnd_toEndOf="@+id/gads_progra"
            app:layout_constraintStart_toStartOf="@+id/gads_progra"
            app:layout_constraintTop_toBottomOf="@+id/gads_progra">

            <!-- calendar-appointment-date 2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/calendar_ap"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/calendar_appointment_date"
                android:clipToOutline="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!-- Dec 12, 2022 -->
            <TextView
                android:id="@+id/program_date"
                android:layout_width="88.72dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:gravity="top"
                android:text="@string/dec_12_2022"
                android:textAppearance="@style/dec_12_2022"
                app:layout_constraintBottom_toBottomOf="@+id/calendar_ap"
                app:layout_constraintStart_toEndOf="@+id/calendar_ap"
                app:layout_constraintTop_toTopOf="@+id/calendar_ap" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- comment-circle-chat-message 1 -->
        <RelativeLayout
            android:id="@+id/comment_cir"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="21dp"
            android:background="@drawable/add_circle_plus"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>